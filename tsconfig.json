{
	"workers": 4,
	"async": false,
	"useTypescriptIncrementalApi": true,
	"watch": ["src"],
	"isolatedModules": false,
	"compilerOptions": {
		// "module": "esnext",
        "module": "commonjs",
        "lib": ["es2018"],
        "outDir": "dist",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": false, 
		"watch": true, 
		"typeRoots": ["node_modules/@types"],
		"types": ["node"] 
	}
}
